@model List<Category>
@{
    ViewData["Title"] = "GetAllCategories";
}

<h1>Categories</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">CATEGORY NAME</th>
            <th scope="col">MANIPULATION</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>
                    <a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Category" asp-action="CreateCategory" class="btn btn-success">Create New Category</a>

