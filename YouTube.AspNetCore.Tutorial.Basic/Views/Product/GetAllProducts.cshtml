@model List<ProductListVM>
@{
    ViewData["Title"] = "GetAllProducts";
}

<h1>Products</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">PRODUCT NAME</th>
            <th scope="col">QUANTITY</th>
            <th scope="col">PRICE</th>
            <th scope="col">CATEGORY NAME</th>
            <th scope="col">HEIGHT</th>
            <th scope="col">WEIGHT</th>
            <th scope="col">COLOUR</th>
            <th scope="col">MANIPULATION</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@item.Category.Name</td>
                <td>@item.ProductFeature.Height</td>
                <td>@item.ProductFeature.Weight</td>
                <td>@item.ProductFeature.Colour</td>
                <td>
                    <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Product" asp-action="CreateProduct" class="btn btn-success">Create New Product</a>





