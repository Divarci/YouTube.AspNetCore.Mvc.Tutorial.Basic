@model List<RoleListVM>

@{
    ViewData["Title"] = "GetAllRoles";
}

<h1>Roles</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">ROLE NAME</th>
            <th scope="col">MANIPULATION</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.RoleName</td>
                <td>
                    <a asp-controller="Role" asp-action="UpdateRole" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-controller="Role" asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Role" asp-action="CreateRole" class="btn btn-success">Create New Role</a>


