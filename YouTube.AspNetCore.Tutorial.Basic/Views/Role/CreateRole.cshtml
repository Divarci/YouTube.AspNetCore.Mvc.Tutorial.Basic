@model RoleCreateVM
@{
    ViewData["Title"] = "CreateRole";
}

<h1>Create Role</h1>


<form action="CreateRole" method="post">
    <div class="mb-3">
        <input type="text" class="form-control" asp-for="RoleName" placeholder="Enter a Role name here">
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <button class="btn btn-outline-success">Create</button>
</form>

